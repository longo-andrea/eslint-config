{
	"name": "@longo-andrea/eslint-monorepo",
	"private": "true",
	"version": "0.6.1",
	"description": "My custom ES Lint config",
	"author": "Andrea Longo<https://github.com/longo-andrea>",
	"scripts": {
		"release:major": "standard-version --release-as major",
		"release:minor": "standard-version --release-as minor",
		"release:patch": "standard-version --release-as patch",
		"format": "prettier --write ."
	},
	"license": "MIT",
	"simple-git-hooks": {
		"pre-commit": "pnpm dlx pretty-quick --staged",
		"commit-msg": "pnpm dlx --no -- commitlint --edit $1"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.3.0",
		"@commitlint/config-conventional": "^17.3.0",
		"@longo-andrea/prettier": "workspace:*",
		"prettier": "^2.8.1",
		"simple-git-hooks": "^2.8.1",
		"standard-version": "^9.5.0"
	}
}
